ORG 0000H
LJMP MAIN

ORG 000BH
LJMP ISR_TMR

ORG 0040H
MAIN: MOV TMOD,#0X01
	  MOV TH0,#0X56
	  MOV TL0,#0XCA
	  MOV IE,#0X82
	  SETB TR0 
	  MOV B,#10
HERE: AJMP HERE

ISR_TMR:  CPL P1.2
	      MOV TH0,#0X56
	      MOV TL0,#0XCA
	      DJNZ B,LOOP
	      MOV B,#10
	      CPL P1.0
	      CPL P1.2
	      RETI

LOOP:   CLR TF0
	    RETI
	  
